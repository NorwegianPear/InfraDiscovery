{
  "$schema": "environments-schema.json",
  "version": "1.0",
  "environments": {
    "_template": {
      "displayName": "Template Environment",
      "domain": "ad.company.local",
      "domainControllers": ["DC01.ad.company.local"],
      "dnsServers": ["DC01.ad.company.local"],
      "dhcpServers": [],
      "hypervisors": [],
      "nutanixCluster": null,
      "paloAltoFirewall": null,
      "netboxUrl": null,
      "targetWebServer": null,
      "portalHostname": "infrastructure.company.local",
      "discoveryOptions": {
        "deepDiscovery": true,
        "includeWorkstations": true,
        "includeServers": true,
        "includeAD": true,
